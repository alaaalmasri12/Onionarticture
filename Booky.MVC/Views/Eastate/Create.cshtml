@model EstateDto;
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div class="block margin-bottom-sm">
        <form method="post" enctype="multipart/form-data" asp-controller="Eastate" asp-action="Create">
            <div class="p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary">Create new Estate</h2>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Name">Title</label>
                    <input asp-for="Name" placeholder="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Details">Details</label>
                    <textarea rows="4" cols="4" placeholder="Details" asp-for="Details" class="form-control"></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Rate">Rate</label>
                    <input asp-for="Rate" placeholder="Rate" class="form-control" />
                    <span asp-validation-for="Rate" class="text-danger"></span>

                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="sqft">sqft</label>
                    <input asp-for="sqft" placeholder="sqft" class="form-control" />
                    <span asp-validation-for="sqft" class="text-danger"></span>
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="EstateTypeId">EstateTypeId</label>
                    <input asp-for="EstateTypeId" placeholder="EstateTypeId" class="form-control" />
                    <span asp-validation-for="EstateTypeId" class="text-danger"></span>
                </div>


              
             
                <div class="row">
                    <div class="col-1 col-md-1">
                        <button type="submit" class="btn btn-primary">Create<i class="bi bi-plus-circle mx-2"></i> </button>

                    </div>
                    <div class="col-1 col-md-1">
                        <a asp-controller="Eastate" class="btn  btn-secondary " asp-action="Index">Back to list <i class="bi bi-box-arrow-right ms-2"></i> </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>